source 'http://rubygems.org'

gem 'rails', '3.1.1'

gem 'carrierwave'
gem 'omniauth'

gem 'capistrano'

group :assets do
  gem 'sass-rails',   '~> 3.1.4'
  gem 'coffee-rails', '~> 3.1.1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

gem 'haml'

group :development, :test do
  gem 'sqlite3'
  gem 'turn', :require => false
end

gem "rspec-rails", :group => [:test, :development]
group :test do
  gem "factory_girl_rails"
  gem "capybara"
  gem "guard-rspec"
end

gem 'pg'
